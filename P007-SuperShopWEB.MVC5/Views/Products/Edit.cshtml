@model P007_SuperShopWEB.MVC5.Models.ProductViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>

<hr />
<div class="row">
    
    <div class="col-md-5">
        <form asp-action="Edit" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            
            <partial name="_Products" />
            
            <div class="form-group">
                @* <input type="submit" value="Save" class="btn btn-primary" /> *@
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Save
                </button>

                <a asp-action="Index" class="btn btn-success">
                    <i class="fa fa-chevron-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:300px; max-width: 100%; height: auto" />
    </div>
    
    <div class="col-md-3">
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
